msj := "opcode,arguments"

opcode
    Client
        0 START_SESSION             // solicita el inicio de una nueva sesion
        1 GET_EVENT_LIST            // solicita la lista de eventos disponibles
        2 GET_AVAILABLE_DATES       // solicita las fechas disponibles
        3 GET_AVAILABLE_SEATS       // solicita la lista de asientos disponibles
        4 REQUEST_RESERVE_TICKETS   // Solicita que se reserven los boletos temporalmente hata la confirmaci贸n de la compra
        5 POST_PAYMENT_INFO         // Envia la informaci贸n de pago confirmando que el cliente quiere los boletos
    Server
        0 SESSION_STARTED           // confirma que la sesion ha sido iniciada
        1 POST_EVENT_LIST           // envia la informacion de los eventos
        2 POST_AVAILABLE_DATES      // envia las fechas y lugares 
        3 POST_AVAILABLE_SEATS      // envia los asientos disponibles para un evento en una fecha especifica
        4 CONFIRM_RESERVE_TICKETS   // confirma la reservaci贸n temporal de los boletos
        5 PUCHARASE_COMPLETED       // informa que la transacci贸n ha finalizado
 
argumnts
